{
    "compilerOptions": {
        "outDir": "scripts/",           // Output directory for compiled JavaScript files
        "types": [                      // TypeScript type declaration files to be included
            "node",
            "@wdio/globals/types",
            "@types/mocha"
        ],
        "esModuleInterop": true,        // Enables compatibility with modules that use export = syntax
        "resolveJsonModule": true,      // Allows importing JSON modules
        "noEmitHelpers": false,         // Disables automatic injection of TypeScript helper functions
        "module": "CommonJS",           // Output module format (CommonJS)
        "allowJs": true,                // Allows JavaScript files to be included and compiled
        "target": "ESNext",             // Specifies the ECMAScript version for transpilation
        "strict": true,                 // Enables strict type checking
        "noImplicitAny": true,          // Raises error on expressions and declarations with an implied 'any' type
        "lib": [                        // List of library files to be included
            "es6",
            "dom"
        ]
    }
}